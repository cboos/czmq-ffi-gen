#!/bin/sh -x
# vim: ft=sh
set -e

SODIUM_VERSION=1.0.8
SODIUM_URL=https://github.com/jedisct1/libsodium/releases/download/${SODIUM_VERSION}/libsodium-${SODIUM_VERSION}.tar.gz

wget $SODIUM_URL
tar -xvzf libsodium-${SODIUM_VERSION}.tar.gz
cd "libsodium-${SODIUM_VERSION}"
./configure
make
sudo make install
sudo ldconfig
